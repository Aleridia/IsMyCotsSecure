{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
	  "include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		"**/*.jsx"
	  ],
	  "ignore": [
		"**/dist/**",
		"**/node_modules/**",
		".vitepress/**",
		"build/**",
		"**/.next/**"
	  ],
	  "ignoreUnknown": true
	},
	"organizeImports": {
	  "enabled": false
	},
	"linter": {
	  "enabled": true,
	  "rules": {
		"recommended": true,
		"suspicious": {
		  "noExplicitAny": "off"
		},
		"style": {
		  "useTemplate": "off"
		}
	  }
	},
	"json": {
	  "formatter": {
		"indentWidth": 4
	  }
	},
	"formatter": {
	  "enabled": true,
	  "indentWidth": 4,
	  "indentStyle": "tab"
	},
	"javascript": {
	  "formatter": {
		"quoteStyle": "single",
		"semicolons": "asNeeded"
	  }
	}
  }